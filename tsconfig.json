{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    
    // ðŸš¨ FIX 1: Corrected library names and format
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* CRITICAL FIX: To recognize process.env */
    "types": ["node"]
  },
  "include": ["src"],
  // ðŸš¨ FIX 2: The reference to the missing tsconfig.node.json has been REMOVED
}
